# Email Configuration (Resend)
RESEND_API_KEY=re_QvGwp9kf_BFXBVWF5fGVdg6LfvJJT7gGM
RESEND_FROM_EMAIL=noreply@uplift.xyz
RESEND_DOMAIN=uplift.xyz
EMAIL_VERIFICATION_EXPIRE_HOURS=24
ADMIN_EMAIL=shayan.s.toor@gmail.com

# Email Service Configuration
EMAIL_RATE_LIMIT_PER_MINUTE=10
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=1.0

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com

# Email Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ADMIN_NOTIFICATIONS=true
ENABLE_WELCOME_EMAILS=true

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SMS_CAMPAIGNS=true
ENABLE_WEBSITE_BUILDER=true
ENABLE_IMAGE_ENHANCEMENT=true

# Cost Management
DAILY_AI_LIMIT_PER_RESTAURANT=1000  # tokens
MONTHLY_SMS_LIMIT_PER_RESTAURANT=500  # messages
ENABLE_USAGE_TRACKING=true

# Security Configuration
SECURE_COOKIES=true
COOKIE_DOMAIN=.yourdomain.com
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com

# External Services
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30